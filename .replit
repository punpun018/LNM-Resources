modules = ["nodejs-20", "web"]
run = "node index.js"
[nix]
channel = "stable-24_05"

[workflows]

[[workflows.workflow]]
name = "Start Backend"
author = 39714650

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd Backend && node index.js"

[[workflows.workflow]]
name = "Start Frontend"
author = 28991126

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd Frontend && npm start"

[[ports]]
